{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es7", "dom"],
    "types": ["node", "mocha"],
    "pretty": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "preserveWatchOutput": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
